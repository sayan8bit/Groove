{
  "name": "Groove - Music Player",
  "short_name": "Groove",
  "description": "A premium music player PWA with background playback and modern UI",
  "start_url": "./index.html",
  "display": "standalone",
  "theme_color": "#1f2937",
  "background_color": "#0f172a",
  "orientation": "portrait",
  "scope": "/",
  "lang": "en-US",
  "categories": ["music", "entertainment"],
  "shortcuts": [
    {
      "name": "Play Music",
      "short_name": "Play",
      "description": "Start playing music",
      "url": "/?action=play",
      "icons": [
        {
          "src": "icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "icons": [
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
   
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+music",
      "url": "/?track=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "audio/*": [".mp3", ".wav", ".ogg", ".m4a", ".flac"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "audioFile",
          "accept": ["audio/*"]
        }
      ]
    }
  }

}

